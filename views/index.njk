{% extends "layout.njk" %}
{% block content %}
<main class="container mt-3">

  <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">

      <div class="home">
        <h1> Flip Flops </h1>
        <hr>
        <div>
          <p class="text"> Put Your Flip in the Flop </p>
        </div>
      </div>

    </a>

    <ul class="nav nav-pills">
      <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Home</a></li>

      {% if loggedin === undefined  %}
      <li class="nav-item"><a href="/login" class="nav-link active">Login</a></li>
      {% endif %}
      {% if loggedin === 1 %}
      <li class="nav-item"><a href="/profile" class="nav-link active">Profile</a></li>
      {% endif %}

    </ul>
  </header>

  <div class="grid-container container">

    {% for products in rows %}


    <div>
      <h2 style="text-align:center">{{ products.name }}</h2>
      <a href="/flipflops/{{ products.name }}">
        {% set imageUrl = "public/img/" + products.name + "/" + products.picture %}
        <img src="/img/{{ products.name }}/{{ products.picture }}">
      </a>

      <div class="card container">
        <p class="price">{{ products.price }}Kr</p>
        <p class="text1">{{ products.description }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</main>
{% endblock %}